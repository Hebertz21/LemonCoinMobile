<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input_text_padrao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgBtnDeleteCategoria"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/transparente"
            android:contentDescription="Remover"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_delete" />

        <ImageButton
            android:id="@+id/imgBtnEditarCategoria"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/transparente"
            android:contentDescription="Editar"
            android:scaleType="center"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnDeleteCategoria"
            app:layout_constraintTop_toTopOf="@+id/imgBtnDeleteCategoria"
            app:srcCompat="@drawable/ic_pencil" />

        <EditText
            android:id="@+id/txtCategoria"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="Nova categoria"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@color/textView"
            android:textColorHighlight="@color/highlighttext"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>